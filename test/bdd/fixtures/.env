# This file contains the default images and tags used in the docker
# The images and tags can be overridden using environment
# variables. See docker compose documentation.

# Default architecture
ARCH=amd64
COMPOSE_DIR=.

# orb node
ORB_FIXTURE_IMAGE=ghcr.io/trustbloc/orb


# couch settings
COUCHDB_IMAGE=couchdb
COUCHDB_IMAGE_TAG=3.1.1
COUCHDB_USERNAME=admin
COUCHDB_PASSWORD=password

COUCHDB_PORT=5984

COUCHDB_KMS_PORT=5984
COUCHDB_SHARED_PORT=5986

# MongoDB settings
MONGODB_IMAGE=mongo
MONGODB_IMAGE_TAG=4.0.0

CAS_TYPE=local

CID_VERSION_DOMAIN1=1
CID_VERSION_DOMAIN2=1
CID_VERSION_DOMAIN3=1
CID_VERSION_DOMAIN4=1

RABBITMQ_USERNAME=admin
RABBITMQ_PASSWORD=password
